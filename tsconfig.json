{
  "compilerOptions": {
    "allowJs": true,
    "erasableSyntaxOnly": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": { "@/*": ["./src/*"] },
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["@serwist/next/typings"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    "src/.breakpoints.config.ts",
    "tooling/stylex-css-prop/index.js",
    "vitest.config.mts"
  ],
  "exclude": ["node_modules", "public/*"]
}
